<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#121212"
    tools:context=".fragments.LibraryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:src="@drawable/ic_launcher_foreground"
                tools:ignore="ContentDescription,HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Your Library"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_search"
                tools:ignore="ContentDescription,RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_add"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>
        <HorizontalScrollView
            android:id="@id/layout3"
            app:layout_constraintTop_toBottomOf="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <LinearLayout
            android:background="#121212"
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="10dp"
                android:background="#2A2A2A"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlists"
                tools:ignore="HardcodedText" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="10dp"
                android:background="#2A2A2A"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artists"
                tools:ignore="HardcodedText" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="10dp"
                android:background="#2A2A2A"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Albums"
                tools:ignore="HardcodedText" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="10dp"
                android:background="#2A2A2A"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podcasts and Shows"
                tools:ignore="HardcodedText" />

        </LinearLayout>
        </HorizontalScrollView>
        <ImageButton
            android:id="@+id/img1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout3"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Liked Songs"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/img2"
            app:layout_constraintStart_toEndOf="@id/img1"
            app:layout_constraintTop_toBottomOf="@id/layout3"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <ImageButton
            android:id="@+id/img2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_asd1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img1"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="RadioHead"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@+id/img3"
            app:layout_constraintStart_toEndOf="@id/img2"
            app:layout_constraintTop_toBottomOf="@id/img1"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <ImageButton
            android:id="@+id/img3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_zxc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img2"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Black Sabbath"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/img4"
            app:layout_constraintStart_toEndOf="@id/img3"
            app:layout_constraintTop_toBottomOf="@id/img2"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <ImageButton
            android:id="@+id/img4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_33a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img3"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="33ა"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/img5"
            app:layout_constraintStart_toEndOf="@id/img4"
            app:layout_constraintTop_toBottomOf="@id/img3"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <ImageButton
            android:id="@+id/img5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_met"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img4"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Metalica"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img6"
            app:layout_constraintStart_toEndOf="@id/img5"
            app:layout_constraintTop_toTopOf="@id/img4"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <ImageButton
            android:id="@+id/img6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_nir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img5"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Nirvana"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img7"
            app:layout_constraintStart_toEndOf="@id/img6"
            app:layout_constraintTop_toTopOf="@id/img5"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <ImageButton
            android:id="@+id/img7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_mil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img6"
            tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Miles Davis"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img8"
            app:layout_constraintStart_toEndOf="@id/img7"
            app:layout_constraintTop_toTopOf="@id/img6"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <ImageButton
            android:id="@+id/img8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_emin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img7"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Eminem "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img9"
            app:layout_constraintStart_toEndOf="@id/img8"
            app:layout_constraintTop_toTopOf="@id/img7"
            tools:ignore="HardcodedText,TextSizeCheck" />
        <ImageButton
            android:id="@+id/img9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_screen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img8"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Song"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/img10"
            app:layout_constraintStart_toEndOf="@id/img9"
            app:layout_constraintTop_toBottomOf="@id/img8"
            tools:ignore="HardcodedText,TextSizeCheck" />
        <ImageButton
            android:id="@+id/img10"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_33a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img9"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
